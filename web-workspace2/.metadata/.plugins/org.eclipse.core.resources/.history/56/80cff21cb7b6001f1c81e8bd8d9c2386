package com.kh.ssuper.member.controller;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.kh.ssuper.member.model.vo.Member;

@WebServlet("/sign-up.me")
public class JoinController extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    public JoinController() {
        super();
    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		// POST
		// 1) ì¸ì½”ë”© ì„¤ì •
		request.setCharacterEncoding("UTF-8");
		
		// íšŒì›ê°€ì…ì´ë€..?
		// ì‚¬ìš©ìê°€ íšŒì›ê°€ì… ì–‘ì‹ì— ì ì€ ê°’ì„ MEMBERí…Œì´ë¸”ê¹Œì§€ ë“¤ê³ ê°€ì„œ í•œ í–‰ INSERT
		// 2) requestê°ì²´ë¡œë¶€í„° ìš”ì²­ ì‹œ ì „ë‹¬ê°’ ë½‘ê¸°
		String userId = request.getParameter("userId"); // "í•„ìˆ˜ì…ë ¥"
		String userPwd = request.getParameter("userPwd");
		String userName = request.getParameter("userName");
		String email = request.getParameter("email");
		String[] interestArr = request.getParameterValues("interest");
		// [ë†ì‚¬, ìë°”] / null
		
		String interest = interestArr != null ?
				String.join(",", interestArr) : "";
		
		// 3) Member ê°ì²´ì— ë‹´ê¸°
		Member member = new Member();
		member.setUserId(userId);
		member.setUserPwd(userPwd);
		member.setUserName(userName);
		member.setEmail(email);
		member.setInterest(interest);
		
		// 4) ìš”ì²­ì²˜ë¦¬(Serviceí˜¸ì¶œ)
		int result = 0;
		
		// 5) ì²˜ë¦¬ê²°ê³¼ë¥¼ ë°›ì•„ ì‚¬ìš©ìê°€ ë³´ê²Œ ë  ì‘ë‹µí™”ë©´ ì§€ì •
		if(result > 0) {
			// ì„±ê³µ => ë©”ì¸(index.jsp)ë¡œ ë³´ë‚´ê³  alert ë¼ì›Œì£¼ê¸°
			
			request.getSession().setAttribute("alertMsg", "íšŒì›ê°€ì… ì„±ê³µğŸ‰ğŸ‰ğŸ‰");

			response.sendRedirect(request.getContextPath());
			
		} else {
			// ì‹¤íŒ¨ => ì‹¤íŒ¨í˜ì´ì§€ë¡œ í¬ì›Œë”©
			request.setAttribute("failMsg", "íšŒì›ê°€ì…ì— ì‹¤íŒ¨í•˜ì…¨ìŠµë‹ˆë‹¤");
			
			request.getRequestDispatcher("/WEB-INF/views/common/fail_page.jsp").forward(request, response);
			
		}
		
		
		
		
		
		
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}
